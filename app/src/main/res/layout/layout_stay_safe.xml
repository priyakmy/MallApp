<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_stay_safe_light_blue">



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#BDDDFC"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Stay safe"/>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:srcCompat="@drawable/mask" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvMask"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Always wear a mask"
        android:layout_margin="10dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/ivMask"
        app:layout_constraintTop_toBottomOf="@id/ivMask"
        app:layout_constraintStart_toStartOf="parent"
        />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivHandwash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/ivMask"
        app:layout_constraintStart_toEndOf="@id/ivMask"
        app:srcCompat="@drawable/handwash" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHandwash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wash hand"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ivHandwash"
        app:layout_constraintStart_toStartOf="@id/ivHandwash"
        app:layout_constraintEnd_toEndOf="@id/ivHandwash"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Keep distance with other person"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/ivDistance"
        app:layout_constraintStart_toStartOf="@id/ivDistance"
        app:layout_constraintEnd_toEndOf="@id/ivDistance"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/ivHandwash"
        app:layout_constraintStart_toEndOf="@+id/ivHandwash"
        app:srcCompat="@drawable/ic_distance" />

     <androidx.appcompat.widget.AppCompatImageView
         android:id="@+id/ivCross"
         android:layout_width="20dp"
         android:layout_height="20dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:srcCompat="@drawable/ic_cross" />


</androidx.constraintlayout.widget.ConstraintLayout>